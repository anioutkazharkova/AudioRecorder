<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azharkova.writemesound" android:versionCode="2" android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:icon="@drawable/icon_app"
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".RecordActivity"
            android:label="@string/title_activity_record"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:icon="@drawable/mic"
            android:name=".CollectionRecordsActivity"
            android:label="@string/title_activity_collection_records"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:icon="@drawable/mic"
            android:name=".RecordInfoActivity"
            android:label="@string/title_activity_record_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:icon="@drawable/mic"
            android:name=".PlayRecordActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_play_record"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:icon="@drawable/mic"
            android:name=".RecordSettingsActivity"
            android:label="@string/title_activity_record_settings" >
        </activity>
        <activity
            android:icon="@drawable/mic"
            android:name=".SortingActivity"
            android:label="@string/title_activity_sorting" >
        </activity>
    </application>

</manifest>
